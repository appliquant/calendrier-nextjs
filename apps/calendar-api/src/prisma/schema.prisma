generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model events {
  user_id             String   @db.VarChar(40)
  event_id            String   @id @db.VarChar(40)
  /// En UTC
  event_creation_date DateTime @default(now()) @db.Timestamp(6)
  /// En UTC
  event_start         DateTime @default(now()) @db.Timestamptz(6)
  /// En UTC
  event_end           DateTime @default(now()) @db.Timestamptz(6)
  title               String   @db.VarChar(60)
  is_completed        Boolean
  description         String   @db.VarChar(256)
  users               users    @relation(fields: [user_id], references: [user_id], onDelete: NoAction, onUpdate: NoAction)
}

model users {
  user_id        String            @id @db.VarChar(40)
  username       String            @unique @db.VarChar(30)
  password       String            @unique @db.VarChar(100)
  created_on     DateTime          @db.Timestamp(6)
  last_login     DateTime?         @db.Timestamp(6)
  week_start_day WEEK_STARTING_DAY @default(MONDAY)
  events         events[]
}

enum WEEK_STARTING_DAY {
  MONDAY
  SUNDAY
}
